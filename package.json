{
  "name": "multi-site-documentation-server",
  "version": "1.0.0",
  "description": "MCP server for fetching documentation from Module Federation, Modern.js, and Firebase",
  "type": "module",
  "main": "build/server.js",
  "bin": {
    "multi-site-doc-server": "./build/index.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "start": "node build/server.js",
    "dev": "tsc && node build/server.js",
    "prepare": "npm run build"
  },
  "engines": {
    "node": ">=20"
  },
  "keywords": [
    "mcp",
    "documentation",
    "model-context-protocol",
    "firebase-app-hosting"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "express": "^4.19.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.10.2",
    "typescript": "^5.7.2"
  },
  "files": [
    "build"
  ]
}
